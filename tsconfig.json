{
	"compilerOptions": {
		"module": "ESNext",
		"target": "es6",
		"lib": ["dom", "esnext"],
		"noImplicitAny": false,
		"removeComments": true,
		"declaration": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"jsx": "preserve",
		"types": ["jest"],
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true
	},
	"include": ["example", "packages", "typings"],
	"exclude": ["node_modules"]
}
